.tab{
  padding: 40rpx 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #ffffff;
}
.tab-item{
  text-align: center;
}
.curr{
  color: #FE950A;
}
.tab-item .txt{
  display: block;
  margin-bottom:10rpx;
}
.curr .border{
  display: block;
  height:1px;
  width:40rpx;
  margin:0px auto;
  background-color: #FE950A;
}

.head-list{
  padding: 0px 20px 15px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ececec;
  color:#b2b2b2;
  
}
.textarea-set{
  padding:0rpx 10rpx;
}
.textarea-set textarea{
  width:100%;
  height:100px;
  padding: 10rpx;
  background-color:#f9f9f9;
}

.forum{
  border-bottom: 1px dotted #ebe7e7;
  
}
.forum-title{
  display: inline-block;
  width: 650rpx;
  line-height: 80rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.forum-counts{
  display: inline-block;
  width: 100rpx;
  line-height: 80rpx;
  color:#b2b2b2;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}